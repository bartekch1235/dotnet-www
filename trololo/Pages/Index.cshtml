@page
@model IndexModel
@{
ViewData["Title"] = "Fizz Buzz";
}
<div class="text-center">
<h1 class="display-4">Welcome @Model.Name</h1>
    <form method="post">
        <span asp-validation-for="FizzBuzz.Number" class="text-danger"></span>
        <label asp-for="FizzBuzz.Number"></label>
        <input asp-for="FizzBuzz.Number" /><br />
        <span asp-validation-for="FizzBuzz.Imie" class="text-danger"></span>
        <label asp-for="FizzBuzz.Imie"></label>
        <input asp-for="FizzBuzz.Imie" /><br />
        <button type="submit">Zatwierdź</button>
          @if (ViewData["a"] == "zla data")
        {
            <div class="alert alert-danger" role="alert">
                nie zyles wtedy 
            </div>
        } @if (ViewData["a"] == "zle")
        {
            <div class="alert alert-danger" role="alert">
                cos jest nie tak
            </div>
        } @if (ViewData["a"] == "zle imie")
        {
            <div class="alert alert-danger" role="alert">
                nie nazywasz sie tak :/
            </div>
        }

        

    </form>
</div>